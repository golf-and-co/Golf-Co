    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Test",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "test"
            ],
            "port": 9229
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Chrome",
            "url": "http://localhost:8000/",
            "webRoot": "${workspaceFolder}",
            "runtimeExecutable": "/usr/bin/chromium",
            "runtimeArgs": [
              "--new-window",
              "-user-data-dir=\"/${workspaceFolder}/DevProfile\"",
              "--remote-debugging-port=9222",
              "--disable-background-networking"
            ]
        },
    ]
}